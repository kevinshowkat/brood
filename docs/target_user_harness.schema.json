{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://brood.dev/schemas/target_user_harness.schema.json",
  "title": "Brood Target User Harness Config",
  "type": "object",
  "required": [
    "schema",
    "schema_version",
    "defaults",
    "personas",
    "scenarios"
  ],
  "additionalProperties": false,
  "properties": {
    "schema": {
      "type": "string",
      "const": "brood.target_user_harness"
    },
    "schema_version": {
      "type": "integer",
      "const": 1
    },
    "defaults": {
      "$ref": "#/$defs/defaults"
    },
    "personas": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/$defs/persona"
      }
    },
    "scenarios": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/$defs/scenario"
      }
    }
  },
  "$defs": {
    "defaults": {
      "type": "object",
      "required": [
        "adapter",
        "max_turns",
        "max_runtime_s",
        "max_cost_usd",
        "text_model",
        "image_model",
        "seed"
      ],
      "additionalProperties": false,
      "properties": {
        "adapter": {
          "type": "string",
          "enum": [
            "chat_cli",
            "desktop_ui"
          ]
        },
        "max_turns": {
          "type": "integer",
          "minimum": 1
        },
        "max_runtime_s": {
          "type": "integer",
          "minimum": 1
        },
        "max_cost_usd": {
          "type": "number",
          "minimum": 0
        },
        "text_model": {
          "type": "string",
          "minLength": 1
        },
        "image_model": {
          "type": "string",
          "minLength": 1
        },
        "seed": {
          "type": "integer",
          "minimum": 0
        },
        "require_reflection_each_turn": {
          "type": "boolean",
          "default": true
        },
        "panel_model": {
          "type": "string",
          "minLength": 1
        },
        "panel_reasoning_effort": {
          "type": "string",
          "enum": [
            "minimal",
            "low",
            "medium",
            "high"
          ]
        },
        "panel_prompt": {
          "type": "string",
          "minLength": 1
        },
        "panel_prompt_path": {
          "type": "string",
          "minLength": 1
        },
        "panel_temperature": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 2.0
        },
        "screenshot_source_dir": {
          "type": "string",
          "minLength": 1
        },
        "screenshot_capture_mode": {
          "type": "string",
          "enum": [
            "auto",
            "source_dir",
            "synthetic"
          ]
        },
        "screenshot_app_names": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "desktop_bridge_socket": {
          "type": "string",
          "minLength": 1
        },
        "desktop_events_path": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "persona": {
      "type": "object",
      "required": [
        "id",
        "role",
        "experience",
        "traits",
        "decision_style"
      ],
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z0-9][a-z0-9_-]{1,63}$"
        },
        "role": {
          "type": "string",
          "minLength": 1
        },
        "experience": {
          "type": "string",
          "enum": [
            "novice",
            "intermediate",
            "expert"
          ]
        },
        "traits": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "decision_style": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "scenario": {
      "type": "object",
      "required": [
        "id",
        "persona_id",
        "project_context",
        "inputs",
        "goal",
        "success_criteria",
        "required_abilities"
      ],
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z0-9][a-z0-9_-]{1,63}$"
        },
        "persona_id": {
          "type": "string"
        },
        "project_context": {
          "type": "string",
          "minLength": 1
        },
        "goal": {
          "type": "string",
          "minLength": 1
        },
        "inputs": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/$defs/input_item"
          }
        },
        "success_criteria": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "required_abilities": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "enum": [
              "use",
              "describe",
              "canvas_context",
              "diagnose",
              "recast",
              "blend",
              "argue",
              "quality",
              "fast",
              "cheaper",
              "better",
              "extract_rule",
              "odd_one_out",
              "triforce",
              "bridge",
              "swap_dna"
            ]
          }
        },
        "policy": {
          "$ref": "#/$defs/policy"
        },
        "bootstrap_actions": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/action"
          }
        },
        "panel_model": {
          "type": "string",
          "minLength": 1
        },
        "panel_reasoning_effort": {
          "type": "string",
          "enum": [
            "minimal",
            "low",
            "medium",
            "high"
          ]
        },
        "panel_prompt": {
          "type": "string",
          "minLength": 1
        },
        "panel_prompt_path": {
          "type": "string",
          "minLength": 1
        },
        "panel_temperature": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 2.0
        },
        "screenshot_source_dir": {
          "type": "string",
          "minLength": 1
        },
        "screenshot_capture_mode": {
          "type": "string",
          "enum": [
            "auto",
            "source_dir",
            "synthetic"
          ]
        },
        "screenshot_app_names": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "desktop_bridge_socket": {
          "type": "string",
          "minLength": 1
        },
        "desktop_events_path": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "input_item": {
      "type": "object",
      "required": [
        "id",
        "path",
        "label"
      ],
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z0-9][a-z0-9_-]{1,63}$"
        },
        "path": {
          "type": "string",
          "minLength": 1
        },
        "label": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "policy": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "max_turns": {
          "type": "integer",
          "minimum": 1
        },
        "max_runtime_s": {
          "type": "integer",
          "minimum": 1
        },
        "max_cost_usd": {
          "type": "number",
          "minimum": 0
        },
        "consecutive_fail_limit": {
          "type": "integer",
          "minimum": 1
        }
      }
    },
    "action": {
      "type": "object",
      "required": [
        "kind"
      ],
      "additionalProperties": false,
      "properties": {
        "kind": {
          "type": "string",
          "enum": [
            "utterance",
            "command",
            "ui"
          ]
        },
        "text": {
          "type": "string",
          "minLength": 1
        },
        "command": {
          "$ref": "#/$defs/command"
        },
        "ui": {
          "$ref": "#/$defs/ui_action"
        },
        "reason": {
          "type": "string"
        },
        "expects": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "allOf": [
        {
          "if": {
            "properties": {
              "kind": {
                "const": "utterance"
              }
            }
          },
          "then": {
            "required": [
              "text"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "kind": {
                "const": "command"
              }
            }
          },
          "then": {
            "required": [
              "command"
            ]
          }
        },
        {
          "if": {
            "properties": {
              "kind": {
                "const": "ui"
              }
            }
          },
          "then": {
            "required": [
              "ui"
            ]
          }
        }
      ]
    },
    "command": {
      "type": "object",
      "required": [
        "name"
      ],
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string",
          "enum": [
            "use",
            "describe",
            "canvas_context",
            "diagnose",
            "recast",
            "blend",
            "argue",
            "extract_rule",
            "odd_one_out",
            "triforce",
            "bridge",
            "swap_dna",
            "quality",
            "fast",
            "cheaper",
            "better"
          ]
        },
        "paths": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "args": {
          "type": "object",
          "additionalProperties": true
        }
      }
    },
    "ui_action": {
      "type": "object",
      "required": [
        "op"
      ],
      "additionalProperties": true,
      "properties": {
        "op": {
          "type": "string",
          "enum": [
            "focus_app",
            "click",
            "double_click",
            "drag",
            "keypress",
            "type_text",
            "wait",
            "click_button",
            "mother_next_proposal",
            "mother_confirm_suggestion",
            "mother_reject_suggestion",
            "select_canvas_image",
            "set_canvas_mode",
            "canvas_pan",
            "canvas_zoom",
            "canvas_fit_all",
            "action_grid"
          ]
        },
        "coord": {
          "type": "string",
          "enum": [
            "window_ratio",
            "screen_px"
          ]
        },
        "x": {
          "type": "number"
        },
        "y": {
          "type": "number"
        },
        "x2": {
          "type": "number"
        },
        "y2": {
          "type": "number"
        },
        "from": {
          "oneOf": [
            {
              "type": "array",
              "minItems": 2,
              "maxItems": 2,
              "items": {
                "type": "number"
              }
            },
            {
              "type": "object",
              "additionalProperties": true
            }
          ]
        },
        "to": {
          "oneOf": [
            {
              "type": "array",
              "minItems": 2,
              "maxItems": 2,
              "items": {
                "type": "number"
              }
            },
            {
              "type": "object",
              "additionalProperties": true
            }
          ]
        },
        "keys": {
          "oneOf": [
            {
              "type": "array",
              "items": {
                "type": "string",
                "minLength": 1
              }
            },
            {
              "type": "string",
              "minLength": 1
            }
          ]
        },
        "key": {
          "type": "string",
          "minLength": 1
        },
        "hotkey": {
          "type": "string",
          "minLength": 1
        },
        "text": {
          "type": "string",
          "minLength": 1
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "ms": {
          "type": "integer",
          "minimum": 0
        },
        "duration_ms": {
          "type": "integer",
          "minimum": 0
        },
        "seconds": {
          "type": "number",
          "minimum": 0
        },
        "settle_ms": {
          "type": "integer",
          "minimum": 0
        },
        "animation_settle_ms": {
          "type": "integer",
          "minimum": 0
        },
        "pre_wait_timeout_ms": {
          "type": "integer",
          "minimum": 1
        },
        "pre_wait_markers": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "pre_wait_events": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "pre_wait_for_markers": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "pre_wait_for_events": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "wait_markers": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "wait_events": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "wait_for_markers": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "wait_for_events": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "image_id": {
          "type": "string",
          "minLength": 1
        },
        "image_index": {
          "type": "integer",
          "minimum": 0
        },
        "path": {
          "type": "string",
          "minLength": 1
        },
        "mode": {
          "type": "string",
          "enum": [
            "single",
            "multi"
          ]
        },
        "expect_canvas_mode": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "expect_mother_phases": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "scale": {
          "type": "number",
          "minimum": 0.05,
          "maximum": 40
        },
        "factor": {
          "type": "number",
          "minimum": 0.05,
          "maximum": 8
        },
        "dx": {
          "type": "number"
        },
        "dy": {
          "type": "number"
        },
        "toggle": {
          "type": "boolean"
        }
      }
    }
  }
}
