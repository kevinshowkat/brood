flowchart LR
  U((User edits canvas)) --> C((Capture context))
  C --> P((Propose best next step))
  P --> G((Generate + log))
  G --> B((Better first draft))
  B --> A((Accept faster))
  A --> U

  EX1["ex: user resizes image smaller"] -.-> C
  EX2["ex: user selects 2 images + Bridge"] -.-> P
  EX3["ex: output + receipt + cost auto-appear"] -.-> G
  EX4["ex: accepted in 1-2 tries"] -.-> A

  classDef core fill:#1b3f73,stroke:#9fc6ff,color:#ffffff,stroke-width:2px;
  classDef ex fill:#eef4ff,stroke:#7f99bf,color:#10213a,stroke-width:1px;
  class U,C,P,G,B,A core;
  class EX1,EX2,EX3,EX4 ex;
